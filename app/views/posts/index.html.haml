.container
  .col-md-12
    %h1{:align=>"center"}= link_to "Click to upload new assignment", new_post_path

#posts.transitions-enabled
  - @posts.each do |post|
    .box.panel.panel-default
      = link_to (image_tag post.image.url), post
      .panel-body
        %h2= link_to post.title, post
        %p.user
          Submitted by
          = post.user.email
